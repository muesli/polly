<div class="jumbotron text-center">
  <h2>Login</h2>
  <p>Please enter your credentials below</p>

  <form {{action 'authenticate' on='submit'}}>

  <div class="form-horizontal form-group form-group-lg row">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
        {{input type="email" value=identification class="form-control" placeholder="Your e-mail address" autofocus="autofocus"}}
        <br/>
        {{input type="password" value=password class="form-control" placeholder="Your password"}}
      </div>
    </div>

    <br/>

    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-offset-4 col-sm-4 col-md-4 col-md-offset-4">
        <button type="submit" disabled={{isDisabled}} class="btn btn-primary btn-lg btn-block">Login</button>
      </div>
    </div>
  </div>

  </form>

  {{#if errorMessage}}
    <div class="alert alert-danger">{{errorMessage}}</div>
  {{/if}}

</div>
